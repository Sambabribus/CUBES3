<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CookEco"
    x:Class="CookEco.AppShell"
    Shell.FlyoutBehavior="Disabled"
    Title="CookEco">
    <TabBar>
        <Tab Title="Main" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Create Recipe" Icon="create.png">
            <ShellContent ContentTemplate="{DataTemplate local:CreateRecipePage}" />
        </Tab>
        <Tab Title="Gallery" Icon="gallery.png">
            <ShellContent ContentTemplate="{DataTemplate local:GalleryPage}" />
        </Tab>
        <Tab Title="Profile" Icon="profile.png">
            <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}" />
        </Tab>
    </TabBar>
</Shell>