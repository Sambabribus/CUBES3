<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookEco.CreateRecipePage"
             Title="CreateRecipePage">
    <StackLayout>
        <Entry x:Name="TitleEntry" Placeholder="Title" />
        <Entry x:Name="DescriptionEntry" Placeholder="Description" />
        <Button Text="Tale Pictures" Clicked="TakePhoto"/>
        <Button Text="Save Recipe" Clicked="OnSaveRecipeClicked" />
    </StackLayout>
</ContentPage>