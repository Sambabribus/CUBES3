<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookEco.MainPage"
             Background="#CA9F4E">
    <StackLayout>
        <Button Text="Create Recipe" Clicked="OnCreateRecipeClicked" />
        <Image x:Name="myImage" HeightRequest="200" />
        <ListView x:Name="RecipeListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Image Source="{Binding ImagePath}" WidthRequest="50" HeightRequest="50"/>
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Title}" FontSize="Medium"/>
                                <Label Text="{Binding Description}" FontSize="Small"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
