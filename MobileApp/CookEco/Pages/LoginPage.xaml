<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookEco.LoginPage"
             Title="LoginPage">
    <StackLayout>
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" />
        <Button Text="Don't have an account? Register" Clicked="OnRegisterClicked" />
        <Label x:Name="HashedPasswordLabel" Text="Hashed Password will be shown here" />
        <Button Text="Show API Data" Clicked="OnShowApiDataClicked" />
        <Editor x:Name="ApiDataEditor" Placeholder="API data will be shown here" IsReadOnly="True" HeightRequest="200"/>
    </StackLayout>
</ContentPage>
